{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@db/*": ["packages/db/*"],
      "@shared/*": ["packages/shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
