{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "carrix-backend/apps",
  "compilerOptions": {
    "tsConfigPath": "carrix-backend/tsconfig.base.json",
    "deleteOutDir": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "carrix-backend/apps/api",
      "entryFile": "main",
      "sourceRoot": "carrix-backend/apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "carrix-backend/apps/api/tsconfig.app.json"
      }
    },
    "worker": {
      "type": "application",
      "root": "carrix-backend/apps/worker",
      "entryFile": "main",
      "sourceRoot": "carrix-backend/apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "carrix-backend/apps/worker/tsconfig.app.json"
      }
    }
  }
}
